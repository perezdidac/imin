<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margins"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dialog_paddings" >

    <TextView
        android:id="@+id/textMessage"
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="@dimen/text_size_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnCamera"
            style="@style/ButtonNeutral"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableRight="@drawable/img_camera_icon"
            android:paddingRight="0dp"
            android:text="@string/take_picture" />

        <Button
            android:id="@+id/btnGallery"
            style="@style/ButtonNeutral"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableRight="@drawable/img_addphoto_icon"
            android:paddingRight="0dp"
            android:text="@string/select_picture" />
    </LinearLayout>

</LinearLayout>