<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/poll_location_vertical_padding"
    android:paddingLeft="@dimen/poll_location_horizontal_padding"
    android:paddingRight="@dimen/poll_location_horizontal_padding"
    android:paddingTop="@dimen/poll_location_vertical_padding" >

    <TextView
        android:id="@+id/textViewPollContact"
        style="@style/TextView"
        android:layout_width="@dimen/poll_datetime_vote_width"
        android:layout_height="@dimen/poll_datetime_vote_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_small" />

    <com.imin.widgets.ResizableImageView
        android:id="@+id/imageViewPollContact"
        style="@style/ButtonPollLocationVote"
        android:layout_width="@dimen/poll_location_vote_width"
        android:layout_height="@dimen/poll_location_vote_height"
        android:layout_centerInParent="true"
        android:src="@drawable/img_user_small"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</RelativeLayout>