<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPreviousMonth"
            style="@style/ButtonCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_calendarmonth_arrowl" />

        <Button
            android:id="@+id/btnMonth"
            style="@style/ButtonCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />

        <Button
            android:id="@+id/btnNextMonth"
            style="@style/ButtonCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/img_calendarmonth_arrowr" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textMonday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/monday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textTuesday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tuesday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textWednesday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/wednesday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textThursday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/thursday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textFriday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/friday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textSaturday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/saturday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textSunday"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_days_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/sunday"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/layoutColumnSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>